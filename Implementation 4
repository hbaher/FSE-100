while 1
    pause(1)
    distance = brick.UltrasonicDist(1); % Get distance to the nearest object.
    display(distance); % Print distance.
    if (distance < 15)
        distance = brick.UltrasonicDist(1); % Get distance to the nearest object.
        brick.MoveMotor('A', 25);
        pause(1)
    end

    if (distance < 15)
        brick.StopAllMotors('Brake');
    end

end
